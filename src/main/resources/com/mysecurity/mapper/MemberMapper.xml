<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysecurity.mapper.MemberMapper">


<resultMap  type="com.mysecurity.dto.MemberDTO"  id="memberMap">
<id property="userid" column="userid" />
<result property="userid" column="userid"/>
<result property="userpw" column="userpw"/>
<result property="username" column="username"/>
<result property="regDate" column="regdate"/>
<result property="updateDate" column="updatedate"/>
<collection property="authList" resultMap="authMap"/>
</resultMap>
<resultMap type="com.mysecurity.dto.AuthDTO"
    id="authMap">
    <result property="userid" column="userid"/>
    <result property="auth" column="auth"/>
   </resultMap>
<select id="read" resultMap="memberMap">
	select 
	mem.userid, userpw, username, regdate, updatedate,auth
	from tbl_member2 mem
	left outer join tbl_auth   auth on
	mem.userid= auth.userid
	where mem.userid=#{userid}
</select>


<insert id="memberJoin">
insert into tbl_member2(userid, userpw, username, regdate, updatedate)
 values(#{userid},#{userpw},#{username},now(),now())
</insert>

<insert id="authJoin">
insert into tbl_auth(userid, auth) values(#{userid},#{auth})

</insert>

<select id="findById" resultType="com.mysecurity.dto.MemberDTO">
select * from tbl_member2 where userid=#{userid}
</select>
<update id="update">
update tbl_member2 set userpw=#{userpw}, username=#{username}
where userid=#{userid}
</update>

<delete id="memberDelete">
delete from  tbl_member2 where userid=#{userid}
</delete>
<delete id="authDelete">
delete from  tbl_auth where userid=#{userid}
</delete>
</mapper>

